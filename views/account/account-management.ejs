<style>
  .account-main {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
    background: #f8fafc;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(25, 118, 210, 0.08);
    text-align: center;
  }
  .account-main h1 {
    color: #0d47a1;
    margin-bottom: 1.5rem;
    font-weight: bold;
  }
  .account-main h2 {
    color: #1976d2;
    margin-bottom: 1rem;
    font-weight: bold;
  }
  .account-main h3 {
    color: #1565c0;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
    font-weight: bold;
    text-align: center;
  }
  .account-main p {
    text-align: center;
  }
  .welcome-link {
    color: #1976d2;
    font-weight: bold;
    background: #e3f2fd;
    padding: 4px 12px;
    border-radius: 6px;
    text-decoration: none;
    margin-right: 8px;
    transition: background 0.2s;
    display: inline-block;
  }
  .welcome-link:hover {
    background: #bbdefb;
    color: #0d47a1;
  }
  .flash-message {
    background: #e3f2fd;
    color: #1976d2;
    padding: 8px 16px;
    border-radius: 6px;
    margin-bottom: 1rem;
    text-align: center;
    font-weight: bold;
  }
  .errors {
    background: #ffebee;
    color: #c62828;
    padding: 8px 16px;
    border-radius: 6px;
    margin-bottom: 1rem;
    list-style: none;
    text-align: left;
  }
  .errors li {
    margin-bottom: 4px;
  }
</style>
<main class="account-main">
  <h1><%= title %></h1>
  <% if (messages && messages.notice) { %>
    <div class="flash-message flash-success"><%= messages.notice %></div>
  <% } %>
  <% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (locals.accountData) { %>
    <h2>
      Welcome <%= locals.accountData.account_firstname %>
    </h2>
    <p>
      <a href="/account/update/<%= locals.accountData.account_id %>" class="welcome-link">
        Update Account Information
      </a>
    </p>
    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/" class="welcome-link">Manage Inventory</a>
      </p>
    <% } %>
  <% } %>
</main>


