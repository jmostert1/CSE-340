      <div class="flash-message error"><%= messages.error %></div>
    <% } %>

    <nav class="management-nav">
      <ul>
        <li>
          <a href="/inv/add-classification">Add New Classification</a>
        </li>
        <li>
          <a href="/inv/add-inventory">Add New Inventory</a>
        </li>
      </ul>
    </nav>
  </main>


</body>
</html>